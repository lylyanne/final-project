<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @shop do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :shop_image, "Upload your shop logo:" %>
      <%= f.filepicker_field :shop_image %>

      <%= f.submit "Create my shop", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
