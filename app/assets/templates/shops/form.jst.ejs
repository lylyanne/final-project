<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1><%= shop.isNew() ? 'New Shop' : 'Edit Shop' %></h1>
      <div class="alert alert-danger errors-div" role="alert">
        <ul class="errors">
        </ul>
      </div>
      <form>
        <label for='name'>Shop name:</label><br>
        <input type='text' name='shop[name]' id='shop_name'
        value='<%= shop.escape('name') %>'>
        <br>
        <label for='shop_image'>Shop logo:</label><br>
        <img class="shop-form-image" src="<%= shop.escape("shop_image") %>"
          width="100" height="100">
        <button class="update-logo btn btn-default" id="shop_shop_image">
          Pick logo
        </button>
        <br>
        <input type="submit" class="shop-submit btn btn-primary">
      </form>
  </div>
</div>
