<div class="shop-management"></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= product.isNew() ? 'New Product' : 'Edit Product' %></h1>
      <form>
        <label for='name'>Product name:</label><br>
        <input type='text' name='product[name]' id='product_name'
        value='<%= product.escape('name') %>'><br>

        <label for='product_image'>Product image:</label><br>
        <img class="product-form-image" src="<%= product.escape("product_image") %>"
          width="100" height="100">
        <button class="update-image btn btn-default">Pick image</button>
        <br>

        <label for='description'>Product description:</label><br>
        <textarea name='product[description]' id='product_description'>
        <%= product.escape('description') %></textarea><br>

        <label for='price'>Product price:</label><br>
        <input type='number' name='product[price]' min="0.01" step="0.01" id='product_price'
        value='<%= product.escape('price') %>'><br>

        <input type="radio" name="product[category]"
value="travel mug" id="product_category_travel_mug"
        <%= (product.get("category") === "travel mug") ? 'checked' : '' %>
        >
        <label for="product_category_travel_mug">travel mug</label>
        <br>
        <input type="radio" name="product[category]"
value="mason jar" id="product_category_mason_jar"
        <%= (product.get("category") === "mason jar") ? 'checked' : '' %>
        >
        <label for="product_category_mason_jar">mason jar</label>
        <br>
        <input type="radio" name="product[category]"
value="coffee mug" id="product_category_coffee_mug"
        <%= (product.get("category") === "coffee mug") ? 'checked' : '' %>
        >
        <label for="product_category_coffee_mug">coffee mug</label>
        <br>

        <input type="submit" class="product-submit btn btn-primary">
      </form>
  </div>
</div>
