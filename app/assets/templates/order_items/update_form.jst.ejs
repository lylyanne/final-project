<div class="col-xs-4">
  <form>
    <h4 class="text-right">Unit Price: <span style="color: green"><%= order_item.escape("unit_price") %></span></h4>
    <div class="row">
      <div class="col-xs-4">
        <input type="number" name='order_item[quantity]'
        id='order_item_quantity'
        min="1" max="12" value="<%= order_item.escape("quantity")%>" >
        <input type="hidden" name='order_item[product_id]'
        id='order_item_product_id'
        value="<%= order_item.escape("product_id") %>" >
      </div>
      <div class="col-xs-8 text-right">
        <div class="btn-group">
          <button class="btn btn-primary">Update Quantity</button>
          <button class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
    <h4 class="text-right">Total Price: <span style="color: green">$<%= order_item.escape("total_price") %></span></h4>
    </form>
</div>
