<div class="col-xs-4">
  <form>
    <h4 class="text-right">Unit Price: <span style="color: green">
      <%= parseFloat(order_item.escape("unit_price")).toFixed(2) %></span></h4>
    <div class="row">
      <div class="col-xs-4">
        <input type="number" name='order_item[quantity]'
        id='order_item_quantity' class="quantity"
        min="1" max="12" value="<%= order_item.escape("quantity")%>" >
        <input type="hidden" name='order_item[product_id]'
        id='order_item_product_id'
        value="<%= order_item.escape("product_id") %>" >
      </div>
      <div class="col-xs-8 text-right">
        <div class="btn-group">
          <button class="btn btn-primary update">Update Quantity</button>
          <button class="btn btn-danger destroy">Delete</button>
        </div>
      </div>
    </div>
      <h4 class="text-right" name='order_item[total_price]'
          id='order_item_total_price'>Total Price:
          <span style="color: green">
            $<%= parseFloat(order_item.escape("total_price")).toFixed(2) %>
          </span>
      </h4>
    </form>
</div>
